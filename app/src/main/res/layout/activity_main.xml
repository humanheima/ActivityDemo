<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hm.activitydemo.activity.MainActivity">

    <Button
        android:id="@+id/btnStartSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:text="再次启动自己"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnStartSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="启动SecondActivity"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHookAMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="hookActivity"
        android:text="hookActivity"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOnNewIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testOnNewIntent"
        android:text="测试onNewIntent方法"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnTestHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testHandler"
        android:text="测试Handler方法"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCheckAppStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="检查app在前台还是后台"
        android:textAllCaps="false" />

</LinearLayout>
